page{
  background: whitesmoke;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  position: fixed;
  top:0rpx;  
  width: 100%;
  height: 100rpx;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  margin: 20rpx;
}
.navbar .item.active{
  color: red;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: red;
}